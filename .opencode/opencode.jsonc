{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": {
      "src": "allow",
      "src/routeTree.gen.ts": "deny",
      "src/worker-configuration.d.ts": "deny"
    },
    "read": {
      "src/worker-configuration.d.ts": "ask"
    },
    "bash": {
      "bun run lint": "allow",
      "bun run lint:fix": "allow"
    }
  },
  "mcp": {
    "bun-docs": {
      "type": "remote",
      "url": "https://bun.com/docs/mcp"
    },
    "tanstack": {
      "type": "local",
      "command": ["bunx", "-y", "@tanstack/cli", "mcp"]
    },
    "better-auth": {
      "type": "remote",
      "url": "https://mcp.inkeep.com/better-auth/mcp"
    }
  }
}
